<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Op3nHunt</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
  <nav class="navbar">
    <div class="container">
      <a href="/" class="nav-brand">
        <div class="nav-brand-icon"><img src="/image/bee.jpg" alt=""></div>
        <span class="nav-brand-text">Op3n<span class="highlight">Hunt</span></span>
      </a>
      
      <button class="nav-toggle" id="navToggle" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>
      
      <div class="nav-links" id="navLinks">
        <% if (user) { %>
          <a href="/dashboard"><i class="fas fa-th-large"></i> Dashboard</a>
          <a href="/saved"><i class="fas fa-bookmark"></i> Saved</a>
          <% if (!user.isActivePremium()) { %>
            <a href="/premium" class="badge-premium">
              <i class="fas fa-crown"></i> Upgrade
            </a>
          <% } else { %>
            <span class="badge-premium">
              <i class="fas fa-crown"></i> Premium
            </span>
          <% } %>
          <a href="/profile"><i class="fas fa-user"></i> <%= user.username %></a>
          <a href="/logout" class="btn btn-secondary">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        <% } else { %>
          <a href="/login">Login</a>
          <a href="/register" class="btn btn-primary">Get Started</a>
        <% } %>
      </div>
    </div>
  </nav>

  <script>
  document.getElementById('navToggle')?.addEventListener('click', function() {
    document.getElementById('navLinks').classList.toggle('active');
    this.classList.toggle('active');
  });
  </script>
